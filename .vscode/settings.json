{
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
		"**/.nuxt": true,
		"pnpm-lock.yaml": true
	},
	"editor.useTabStops": true,
	"editor.tabSize": 4,
	"formatFiles.excludedFolders": [
		"node_modules",
		".vscode",
		".git",
		"dist",
		".chrome",
		".nuxt",
		"public"
	],
	"formatFiles.excludePattern": "pnpm-lock.yaml",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[vue]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
