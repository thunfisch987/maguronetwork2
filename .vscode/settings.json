{
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
		"**/.nuxt": true
	},
	"json.schemas": [
		{
			"fileMatch": ["sidebarItems.json"],
			"url": "/sidebar-items-schema.json"
		}
	],
	"editor.useTabStops": true,
	"editor.tabSize": 4,
	"formatFiles.excludedFolders": [
		"node_modules",
		".vscode",
		".git",
		"dist",
		".chrome",
		".nuxt"
	],
	"formatFiles.excludePattern": "pnpm-lock.yaml",
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.semi": false,
	"prettier.singleQuote": true,
	"prettier.trailingComma": "all",
	"prettier.singleAttributePerLine": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[vue]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
