{
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
		"**/.nuxt": true
	},
	"json.schemas": [
		{
			"fileMatch": ["sidebarItems.json"],
			"url": "/sidebar-items-schema.json"
		}
	],
	"eslint.validate": ["javascript", "typescript"],
	"eslint.workingDirectories": [
		"./pages",
		{"pattern": "./pages/*/"},
		"./components",
		"./composables",
		"./middleware",
	]
}
