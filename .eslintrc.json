{
	"root": true,
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-recommended",
		"plugin:@typescript-eslint/recommended",
		"@nuxt/eslint-config"
	],
	"parser": "vue-eslint-parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"parser": "@typescript-eslint/parser"
	},
	"rules": {
		"vue/html-indent": ["error", "tab"],
		"vue/multi-word-component-names": ["error", { "ignores": ["index"] }]
	}
}
